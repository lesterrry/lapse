{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Kill Server",
            "type": "shell",
            "command": "pkill -f 'passenger' || true",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Start",
            "type": "shell",
            "command": "~/.rbenv/shims/rails s",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DEBUG": "core:*",
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
            },
            "isBackground": true,
            "problemMatcher": [],
            "dependsOn": "Kill Server"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "~/.rbenv/shims/bundle exec rubocop -a",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
            },
            "isBackground": false,
            "problemMatcher": [],
        }
    ]
}
