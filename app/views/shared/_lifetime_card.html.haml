- profile_title ||= nil
- profile_subtitle ||= nil
- profile_image ||= nil

- start_point ||= ''
- finish_point ||= ''

%a.shared-lifetime-card{href: link}
    %div.upper
        %p.text-m= title
        = shared 'icon', { name: 'more' }
    %div.center
        %div.asset
            = image_tag asset_1
        %div.asset
            = image_tag asset_2
        %div.asset
            = shared 'points', { column: true, text_start_point: start_point, text_finish_point: finish_point}
    %div.lower
        - if profile_image && profile_title && profile_subtitle
            = shared 'profile_preview', { image: profile_image, title: profile_title, subtitle: profile_subtitle }
        %div.stats
            %div
                = shared 'icon', { name: 'heart', size: 's' }
                %p.text-s 128
            %div
                = shared 'icon', { name: 'eye', size: 's' }
                %p.text-s 128