- custom_actions ||= []
- data ||= {}
- id ||= nil
- html_class ||= nil
- tag ||= 'p'

%span.shared-editable-text{'data-controller': 'editable-text', data: data}
	- actions = ['blur->editable-text#handleBlur', *custom_actions]
	= content_tag tag, text, { class: html_class, 'contenteditable': enabled || nil, 'data-action': actions.join(' '), 'data-id': id }
	= form.hidden_field form_field, { 'data-editable-text-target': 'field' }
