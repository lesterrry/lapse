.container
	.single-lifetime
		%h1 lifetime page
		%h2= @lifetime.title
		%p= @lifetime.description

		%div.years
			- years_from_periods(@lifetime.periods.map).each do |year|
				%p= year

		%div.chart{'data-controller': 'lifetime', 'data-lifetime-periods': @lifetime.periods.to_json}
			%div
				%canvas{'data-lifetime-target': 'canvas'}

		%div.periods
			%h2 периоды
			- @lifetime.periods.each do |period|
				= render partial: 'partials/period', locals: { period: }
