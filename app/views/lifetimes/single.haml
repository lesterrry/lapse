.container
	.single-lifetime
		%h2= @lifetime.title
		%p= @lifetime.description

		%div.years
			- @years.each do |year|
				- if year == @selected_year
					%p= year
				- else
					= link_to year, single_lifetime_url(id: @lifetime.id, year: year)

		%div.chart{'data-controller': 'lifetime', 'data-lifetime-periods': @periods.to_json, 'data-lifetime-selected-year': @selected_year}
			%div
				%canvas{'data-lifetime-target': 'canvas'}

		%div.periods
			%h2 периоды
			- @periods.each do |period|
				= render partial: 'partials/period', locals: { period: }
