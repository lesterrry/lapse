%turbo-frame.comments{id: "lifetime_#{@lifetime.id}_comments"}
    .existing
        %h2 комментарии
        - @lifetime.comments.each do |comment|
            %div.comment
                %p= some_user_name(comment.user)
                %p= comment.content

    .add
        %h2 добавить комментарий
        = form_with model: [@lifetime, @lifetime.comments.build] do |form|
            = form.text_area :content
            = form.submit "отправить"

