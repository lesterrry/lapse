%turbo-frame.comments{id: qualify(@lifetime, 'comments')}
    .existing
        - @lifetime.comments.each do |comment|
            %div.comment
                %p.text-s= comment.content
                = shared 'profile_preview', { image: 'profile_mock.jpg', title: some_user_name(comment.user), subtitle: '256 подписчиков' }

        = form_with model: [@lifetime, @lifetime.comments.build] do |form|
            = form.text_area :content, class: 'text-s', placeholder: 'оставьте комментарий'
            = shared 'button', { text: 'отправить', color: 'lightblue', size: 'xs', hollow: true, form: }

