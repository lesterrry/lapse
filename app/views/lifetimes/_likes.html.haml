%turbo-frame.likes{id: qualify(@lifetime, 'likes')}
    - if current_user
        - if @lifetime.liked_by?(current_user)
            = shared 'button', size: 'xs', color: 'lightblue', hollow: true, method: :delete, no_confirm: true, link: lifetime_like_url(@lifetime, @lifetime.likes.find_by(user: current_user)), text: t('lifetimes.likes.unlike')
        - else
            = shared 'button', size: 'xs', color: 'lightblue', hollow: true, method: :post, no_confirm: true, link: lifetime_likes_url(@lifetime), text: t('lifetimes.likes.like')
    %div.count
        %p.text-s.stroke.lightblue= @lifetime.like_count
