.year-switcher
    %p.text-xl= @selected_year
    %div
        - if @previous_year
            = top_link_to '←', single_lifetime_url(id: @lifetime.id, year: @previous_year, cal: params['cal'])
        - if @next_year
            = top_link_to '→', single_lifetime_url(id: @lifetime.id, year: @next_year, cal: params['cal'])