- months = @calendar.map do |month|
    - { short: t("date.month_names.#{month}.short"), full: t("date.month_names.#{month}.full") }

- with_bullets = months.length == 12

.labels
    - months.each_with_index do |month, index|
        - value = 360 / months.length * index
        - if with_bullets
            %p.text-s{**position_label(value + 15)} â€¢
        %p.text-s{title: month[:full], **position_label(value)}= month[:short]
