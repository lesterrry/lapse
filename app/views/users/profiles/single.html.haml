.profiles-single.container
	%div
		%h2 профиль
		= link_to 'Настройки входа', '/users/edit'

		%div.shared-lifetime-card-container
			- @lifetimes.each do |lifetime|
				= shared 'lifetime_card', { title: lifetime.title, link: single_lifetime_url(lifetime), asset_1: 'ugc_mock_1', asset_2: 'ugc_mock_2', asset_3: '2025' }

		= render "users/shared/links", resource_name: :user, devise_mapping: Devise.mappings[:user]
