%turbo-frame.profiles-edit.container{id: qualify(@user)}
  = notification
  %div.info-block
    = render partial: 'users/profiles/profile_heading', locals: { main_text: 'назад в профиль', main_link: my_profile_path }

  %div.settings-block
    = render partial: 'users/profiles/profile_settings_heading'
    = form_for @user, url: users_single_profile_url(@user.id) do |f|
      = f.label :first_name, 'Имя'
      = shared 'input', { html_class: 'blue', placeholder: 'имя', form_field: :first_name, form: f, value: @user.first_name }
      = f.label :last_name, 'Фамилия'
      = shared 'input', { html_class: 'blue', placeholder: 'фамилия', form_field: :last_name, form: f, value: @user.last_name }
      = f.label :username, 'Имя пользователя'
      = shared 'input', { html_class: 'blue', placeholder: '@username', form_field: :username, form: f, value: @user.username }
      = f.label :profile_picture, 'Изображение профиля'
      = shared 'file_button', { label: :profile_picture, fields: f, selected: @user.profile_picture.attached?, delete_param: 'delete-picture', id: @user.id, html_class: 'file-button' }
      = shared 'button', { text: 'Сохранить изменения', form: f, advance: true, size: 's', html_class: 'save-button' }
