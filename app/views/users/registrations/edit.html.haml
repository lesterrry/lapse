%turbo-frame.profiles-edit.container{id: qualify(@user)}
  = notification
  %div.info-block
    = render partial: 'users/profiles/profile_heading', locals: { main_text: 'назад в профиль', main_link: my_profile_path, bottom_hidden: true }

  %div.settings-block
    = render partial: 'users/profiles/profile_settings_heading'

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.label :email, 'Email'
      = shared 'input', { html_class: 'blue', placeholder: 'email', form_field: :email, form: f, value: @user.email, required: true }
      = f.label :password, 'Новый пароль'
      = shared 'input', { html_class: 'blue', placeholder: 'пароль', form_field: :last_name, form: f }
      = shared 'button', { text: 'Сохранить изменения', form: f, advance: true, size: 's', html_class: 'save-button' }
