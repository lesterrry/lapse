.registrations-edit.container
  = notification
  %div.info-block
    = render partial: 'users/profiles/profile_heading', locals: { main_text: 'назад в профиль', main_link: my_profile_path, bottom_hidden: true }

  %div.settings-block
    = shared 'tab_select', { items: [{ label: 'Основные', link: my_profile_path }, { label: 'Безопасность', link: my_profile_path }, { label: 'Passkeys', link: my_profile_path }] }
    %p.text-l.stroke Настройки безопасности

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!

      .field
        = f.label :email
        %br/
        = f.email_field :email

      .field
        = f.label :password
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "off" 

      .actions
        = f.submit "Update"
