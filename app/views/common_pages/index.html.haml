.common-pages-index.container

    %div.lapse-block
        = render layout: 'shared/lapse' do
            %div.a
            %div.b
            %div.c
            %div.content
                %h1.text-xl.text-accent your whole life
                %p.text-m.stroke at a glance
                = shared 'button', { size: 'xs', color: 'lightblue', text: 'create a lapse', link: new_lifetime_path }

    %div.popular-block
        %h1.text-l.stroke.heading popular timelines
        %div
            = shared 'lifetime_card', { title: 'bebra' }